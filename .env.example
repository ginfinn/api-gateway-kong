# ============================================================================
# ПРИМЕР ФАЙЛА ПЕРЕМЕННЫХ ОКРУЖЕНИЯ
# ============================================================================
# 
# КРИТИЧЕСКИ ВАЖНО:
# 1. Скопируйте этот файл в .env: cp .env.example .env
# 2. Заполните ВСЕ значения реальными данными
# 3. НИКОГДА не коммитьте .env файл в git!
# 4. Используйте сильные пароли (минимум 16 символов)
# 5. Генерируйте случайные значения для секретов
#
# Генерация случайных паролей:
#   openssl rand -base64 32
#   openssl rand -hex 32
# ============================================================================

# ----------------------------------------------------------------------------
# Keycloak Admin Credentials
# ----------------------------------------------------------------------------
# ВАЖНО: Измените пароль администратора перед production!
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS

# ----------------------------------------------------------------------------
# Keycloak Database
# ----------------------------------------------------------------------------
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS
KEYCLOAK_DB_NAME=keycloak

# ----------------------------------------------------------------------------
# Kong Database
# ----------------------------------------------------------------------------
KONG_DB_USER=kong
KONG_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS
KONG_DB_NAME=kong

# ----------------------------------------------------------------------------
# Keycloak Realm Configuration
# ----------------------------------------------------------------------------
REALM_NAME=myrealm
KEYCLOAK_HOSTNAME=auth.example.com

# ----------------------------------------------------------------------------
# Keycloak Client Secrets
# ----------------------------------------------------------------------------
# Получите эти секреты из Keycloak после создания клиентов:
# Keycloak Admin Console → Clients → [выберите клиент] → Credentials → Client Secret
USER_SERVICE_CLIENT_SECRET=CHANGE_ME_GET_FROM_KEYCLOAK
ORDER_SERVICE_CLIENT_SECRET=CHANGE_ME_GET_FROM_KEYCLOAK
PAYMENT_SERVICE_CLIENT_SECRET=CHANGE_ME_GET_FROM_KEYCLOAK
ADMIN_SERVICE_CLIENT_SECRET=CHANGE_ME_GET_FROM_KEYCLOAK

# ----------------------------------------------------------------------------
# Kong Session Secrets
# ----------------------------------------------------------------------------
# Генерируйте уникальные случайные строки для каждого сервиса
# Минимум 32 символа, рекомендуется 64+
# Используйте: openssl rand -base64 48
USER_SERVICE_SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHARS_MIN
ORDER_SERVICE_SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHARS_MIN
PAYMENT_SERVICE_SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHARS_MIN
ADMIN_SERVICE_SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHARS_MIN

# ----------------------------------------------------------------------------
# Nginx Ports (опционально, по умолчанию используются стандартные)
# ----------------------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_KEYCLOAK_PORT=8443
